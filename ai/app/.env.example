# ============================================
# Конфигурация AI-ассистента для анализа планировок
# ============================================
# Скопируйте этот файл в .env и заполните значениями

# ============================================
# ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ
# ============================================

# API ключ Gemini (обязательно)
# Получить можно на: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here

# ============================================
# НАСТРОЙКИ МОДЕЛЕЙ (опционально, есть значения по умолчанию)
# ============================================

# Модель Gemini для генерации текста
# Доступные модели: gemini-2.5-pro, gemini-2.5-flash, gemini-2.5-flash-lite,
#                   gemini-2.0-flash, gemini-2.0-flash-lite
# По умолчанию: gemini-2.0-flash
GEMINI_MODEL=gemini-2.0-flash

# Модель для локальных эмбеддингов (sentence-transformers)
# Популярные модели: all-MiniLM-L6-v2 (легкая, быстрая),
#                   all-mpnet-base-v2 (более точная, медленнее)
# По умолчанию: all-MiniLM-L6-v2
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2

# ============================================
# НАСТРОЙКИ RAG (Retrieval Augmented Generation)
# ============================================

# Размер чанка текста для RAG (в символах)
# По умолчанию: 1000
RAG_CHUNK_SIZE=1000

# Перекрытие между чанками (в символах)
# По умолчанию: 200
RAG_CHUNK_OVERLAP=200

# Количество релевантных чанков для поиска в RAG
# По умолчанию: 5
RAG_TOP_K=5

# ============================================
# НАСТРОЙКИ ЧАТА
# ============================================

# Температура для генерации ответов чата (0.0 - 1.0)
# Более высокое значение = более креативные ответы
# По умолчанию: 0.7
CHAT_TEMPERATURE=0.7

# Максимальное количество сообщений в истории чата
# По умолчанию: 10
CHAT_MAX_HISTORY=10

# ============================================
# НАСТРОЙКИ АНАЛИЗА ПЛАНИРОВОК
# ============================================

# Температура для анализа планов (0.0 - 1.0)
# Более низкое значение = более детерминированные результаты
# По умолчанию: 0.3
ANALYSIS_TEMPERATURE=0.3

# Количество релевантных чанков для анализа
# По умолчанию: 10
ANALYSIS_TOP_K=10

# ============================================
# ПРИМЕЧАНИЯ
# ============================================
# - Все переменные, кроме GEMINI_API_KEY, имеют значения по умолчанию
# - Если переменная не указана, будет использовано значение по умолчанию
# - Не коммитьте файл .env в репозиторий (он уже в .gitignore)

